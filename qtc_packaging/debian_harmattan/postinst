#!/bin/sh
set -e

case "$1" in
    configure)
        if dpkg --compare-version "$2" lt "0.5.0"
        then
            /usr/bin/aegis-exec -s -u user /usr/bin/gconftool -s --type=bool /apps/ControlPanel/Helium/Display/show-device-icons false
            /usr/bin/aegis-exec -s -u user /usr/bin/gconftool -s --type=bool /apps/ControlPanel/Helium/Display/show-media-art false
            /usr/bin/aegis-exec -s -u user /usr/bin/gconftool -s --type=bool /apps/ControlPanel/Helium/Display/show-device-popup true
            /usr/bin/aegis-exec -s -u user /usr/bin/gconftool -s --type=bool /apps/ControlPanel/Helium/Sharing/start-media-sharing true
        fi
    ;;
esac

exit 0
